REM

IF NOT EXIST "{{instancePath}}" GOTO MKINSTANCE
RMDIR /S /Q {{instancePath}}
:MKINSTANCE
MKDIR {{instancePath}}
{{#if studio}}
MKDIR {{studioPath}}
{{/if}}
{{#if portal}}
MKDIR {{portalPath}}
MKDIR {{instancePath}}\EBS_DIR
{{/if}}

{{#if database}}
CD {{kitPath}}\SQL
BasicDbUpgrade -i -d {{dbName}}
BasicDbUpgrade -w -d {{dbName}}
BasicDbUpgrade -g -d {{dbName}}
{{/if}}

